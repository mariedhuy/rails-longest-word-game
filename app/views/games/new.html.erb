<h1 class="m-3">New game</h1>

<div class="container">
  <div class="row">
    <% @letters.map! do |element| %>
      <div class="col">
        <button class="btn btn-primary" type="button" disabled><%= element %></button>
      </div>
    <% end %>
  </div>
  <form action="/score" method="post" data-turbo="false" class="mt-2">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label class="form-label">What is the longest word you can find ?</label>
    <div class="input-group mb-3">
      <input type="text" class="form-control" name="word">
      <input type="submit" class="btn btn-secondary active btn-outline" value="Play!">
    </div>
  </form>
</div>
